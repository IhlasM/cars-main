<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/numCarsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите количество автомобилей"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/startRaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начать гонку"
        android:layout_below="@id/numCarsEditText"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/raceResultsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startRaceButton"
        android:layout_marginTop="16dp"
        android:text="Результаты гонки будут отображаться здесь"
        android:textSize="16sp" />
</RelativeLayout>
